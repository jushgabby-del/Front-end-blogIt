import {type Request, type Response ,type NextFunction}    from 'express';
import {PrismaClient} from '@prisma/client';
  
const client = new PrismaClient();


 {
try {
      const { emailAddress, userName } = req.body


      const userWithEmail = await client.user.findUnique({ 
        where: {emailAddress}
      })
      if (userWithEmail){
        res.status(400).json({message: "Email add already associated with another account"})
      } return;

      const userWithUsername = await client.user.findUnique({ 
        where: {userName}
      })
      if (userWithUsername){
        res.status(400).json({message: " username already associated with another account"})
      } return;

} catch (e) {
    res.status(500).json({"ooops! Something went wrong"})
}
}
